<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_linear" >
    
    <ToggleButton
        android:id="@+id/toggle_bttn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textOn="Registerd ~"
        android:textColor="#66CC33"
        android:textOff="Let's register!"
      />
    
    <TextView 
     android:id="@+id/textV"
     android:text="60"
     android:padding="10dp"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:textColor="#BBBBBB"
     android:lines="1"
     android:gravity="center"
        />
    
    <FrameLayout
      android:layout_width="0px"
      android:layout_height="4dp"
      />
    
    <LinearLayout
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:gravity="center"
    android:orientation="horizontal"
         >
    <Button
     android:id="@+id/bttn_pre"
     android:text="Previous"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:textColor="#BBBBBB"
     android:layout_weight="1"
        />
    
    <FrameLayout
      android:layout_width="4dp"
      android:layout_height="0dp"
      />
    
     <Button
     android:id="@+id/bttn_next"
     android:text="Next"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:textColor="#BBBBBB"
     android:layout_weight="1"
        />   
    </LinearLayout>
    
    <FrameLayout
     android:layout_width="0px"
     android:layout_height="4dp"
   		/>
         
     <Button
     android:id="@+id/bttn_start"
     android:text="START"
     android:padding="10dp"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:textColor="#BBBBBB"
     	/>
     
     <FrameLayout
      android:layout_width="0px"
      android:layout_height="4dp"
    	/>
          
     <Button
     android:id="@+id/bttn_stop"
     android:text="STOP"
     android:padding="10dp"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:textColor="#BBBBBB"
        />
     
     

      


</LinearLayout>
