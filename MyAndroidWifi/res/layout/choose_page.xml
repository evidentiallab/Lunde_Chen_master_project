<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     android:background="#000000"
    tools:context=".ChoosePage" >
    <Spinner 
        android:id="@+id/spinner_choosepage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/hello_world"
        android:layout_alignParentTop="true"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:orientation="horizontal"
     	android:gravity = "center"
     	android:layout_alignParentBottom = "true"
         >    
    <LinearLayout
        android:layout_width="0dp"
     	android:layout_height="wrap_content"
     	android:orientation="horizontal"
     	android:gravity = "center"
     	android:layout_weight="1"
         >
    <TextView
        android:id="@+id/textV_wifi_1_choosepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:minWidth="70dp"
        android:text="Rssi  "
         />
    <TextView 
        android:id="@+id/textV_wifi_2_choosepage"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:minWidth="50dp"
        android:gravity="center"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="#BBBBBB"
        android:text="UNKNOWN"
        />
        </LinearLayout>
        <Button 
        android:id="@+id/button_choosepage"
        android:layout_centerHorizontal="true"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:text="Let's go!"
        android:textColor="#BBBBBB"
        />
        </LinearLayout>
    <ScrollView 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="20dp"
	    android:layout_below="@id/spinner_choosepage"
        >
     <LinearLayout
        android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:orientation="vertical"
     	android:gravity = "center"
         >
    <RelativeLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity = "center"
	    android:id="@+id/relativL_1_choosepage"
        >
    <TextView
        android:id="@+id/textV_1_choosepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:minWidth="100dp"
        android:text="Length of string to server"
        android:layout_alignParentLeft="true"
         />
    
    <EditText 
        android:id="@+id/editV_1_choosepage"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:minWidth="100dp"
        android:maxWidth="100dp"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="#003300"
        android:background="#555555"
        android:padding="2dp"
        android:text="1"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity = "center"
	    android:layout_marginTop="10dp"
	    android:id="@+id/relativL_2_choosepage"
        >
    <TextView
        android:id="@+id/textV_2_choosepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:minWidth="100dp"
        android:text="Length of string from server "
        android:layout_alignParentLeft="true"
         />
    <EditText 
        android:id="@+id/editV_2_choosepage"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:minWidth="100dp"
        android:maxWidth="100dp"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="#003300"
        android:background="#555555"
        android:padding="2dp"
        android:text="S"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity = "center"
	    android:layout_marginTop="10dp"
	    android:id="@+id/relativL_3_choosepage"
        >
    <TextView
        android:id="@+id/textV_3_choosepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:minWidth="100dp"
        android:text="Sleep interval in millis (0-5000)   "
        android:layout_alignParentLeft="true"
         />
    
    <EditText 
        android:id="@+id/editV_3_choosepage"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:minWidth="50dp"
        android:maxWidth="60dp"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="#003300"
        android:background="#555555"
        android:padding="2dp"
        android:text="500"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:orientation="horizontal"
     	android:layout_marginTop="10dp"
     	android:gravity="center"
     	android:id="@+id/relativL_4_choosepage"
         >
    <TextView
        android:id="@+id/textV_4_choosepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:minWidth="100dp"
        android:text="Write Log? (0 no, 1 yes)     "
        android:layout_alignParentLeft="true"
         />
    <EditText 
        android:id="@+id/editV_4_choosepage"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:minWidth="50dp"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="#003300"
        android:background="#555555"
        android:padding="2dp"
        android:text="1"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout> 
    
    <RelativeLayout
        android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:orientation="horizontal"
     	android:gravity = "center"
     	android:layout_marginTop="10dp"
     	android:id="@+id/relativL_5_choosepage"
         >
    <TextView
        android:id="@+id/textV_5_choosepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:minWidth="100dp"
        android:text="Screen Brightness(0-100)    "
        android:layout_alignParentLeft="true"
         />
    <EditText 
        android:id="@+id/editV_5_choosepage"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:minWidth="50dp"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="#003300"
        android:background="#555555"
        android:padding="2dp"
        android:text="0"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout> 
    <LinearLayout
        android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:orientation="horizontal"
     	android:gravity = "center"
     	android:layout_marginTop="10dp"
         >
    
    <Button
     android:id="@+id/bttn_moins_choosepage"
     android:text="Value -"
     android:textSize="15sp"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:textColor="#BBBBBB"
     android:layout_weight="1"
        />
    
        <Button
     android:id="@+id/bttn_clear_choosepage"
     android:text="Clear"
     android:textSize="15sp"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:textColor="#BBBBBB"
     android:layout_weight="1"
        />
       
    
     <Button
     android:id="@+id/bttn_plus_choosepage"
     android:text="Value +"
     android:textSize="15sp"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:textColor="#BBBBBB"
     android:layout_weight="1"
        />
      </LinearLayout>
      
     <LinearLayout
        android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:orientation="horizontal"
     	android:layout_marginTop="10dp"
         >
    <LinearLayout
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:orientation="vertical"
     	android:layout_weight="1"
         >
    <CheckBox 
	    android:id="@+id/checkB_cpu_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log CPU"
	    android:onClick="onCheckboxClicked"
	    />
    <CheckBox 
	    android:id="@+id/checkB_battery_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log Battery"
	    android:onClick="onCheckboxClicked"
	    />
    <CheckBox 
	    android:id="@+id/checkB_rssi_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log Rssi"
	    android:onClick="onCheckboxClicked"
	    />
    <CheckBox 
	    android:id="@+id/checkB_screen_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log Screen"
	    android:onClick="onCheckboxClicked"
	    />
     </LinearLayout>
     <LinearLayout
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:orientation="vertical"
     	android:layout_weight="1"
         >
    <CheckBox 
	    android:id="@+id/checkB_bytes_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log Bytes"
	    android:onClick="onCheckboxClicked"
	    />
    <CheckBox 
	    android:id="@+id/checkB_packets_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log Packets"
	    android:onClick="onCheckboxClicked"
	    />
    <CheckBox 
	    android:id="@+id/checkB_speed_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log Speed"
	    android:onClick="onCheckboxClicked"
	    />
    <CheckBox 
	    android:id="@+id/checkB_maxvalue_choosepage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#BBBBBB"
	    android:text="log Max Value"
	    android:onClick="onCheckboxClicked"
	    />
    
     </LinearLayout>
    </LinearLayout>
    </LinearLayout> 
    </ScrollView>
   
</RelativeLayout>